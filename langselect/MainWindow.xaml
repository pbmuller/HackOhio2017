<Window x:Name="LangSel" x:Class="langselect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:langselect"
        mc:Ignorable="d"
        Title="Language Selection" Height="115.315" Width="404.657" ResizeMode="NoResize"
        Background="Black">
    <Grid Margin="-52,-120,0,0" Height="236" VerticalAlignment="Top" HorizontalAlignment="Left" Width="448">

        <Label Content="Please select language: " HorizontalAlignment="Left" Height="66" Margin="83,126,0,0" VerticalAlignment="Top" Width="287" Foreground="ForestGreen" FontFamily="Arial"/>

        <ComboBox x:Name="LanguageSel" Foreground="ForestGreen" HorizontalAlignment="Left" Height="23" Margin="84,156,0,0" VerticalAlignment="Top" Width="286" FontFamily="Arial" FontSize="15" SelectionChanged="LanguageSel_SelectionChanged"/>
        <Button Content="Change" HorizontalAlignment="Left" Height="23" Margin="370,156,0,0" VerticalAlignment="Top" Width="49" Click="Button_Click"/>

    </Grid>
</Window>
